{% extends '@AropixelAdmin/Form/base.html.twig' %}

{% block header_title %}{% trans %}News{% endtrans %}{% endblock %}
{% block header_breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ url('_admin') }}">{% trans %}Home{% endtrans %}</a></li>
        <li class="breadcrumb-item">Blog</li>
        <li class="breadcrumb-item"><a href="{{ url('aropixel_blog_post_index') }}">{% trans %}News{% endtrans %}</a></li>
        {% if post.id %}
            <li class="breadcrumb-item">{% trans %}Edit{% endtrans %}</li>
            <li class="breadcrumb-item active">{{ post.title }}</li>
        {% else %}
            <li class="breadcrumb-item active">{% trans %}Add{% endtrans %}</li>
        {% endif %}
    </ul>
{% endblock %}



{% block mainPanel %}

    <div class="tabbable">
        <ul class="nav nav-tabs nav-tabs-highlight">
            <li class="nav-item"><a href="#panel-tab1" data-toggle="tab" class="nav-link active"><i class="fa fa-paper-plane position-left"></i> {% trans %}News{% endtrans %}</a></li>
            <li class="nav-item"><a href="#panel-tab2" data-toggle="tab" class="nav-link"><i class="fab fa-google position-left"></i> {% trans %}SEO{% endtrans %}</a></li>
        </ul>
    </div>

    <div class="panel-tab-content tab-content">

        <div class="tab-pane active" id="panel-tab1">

            <div class="card">

                <div class="card-body">


                    {{ form_row(form.title) }}

                    {% if form.category is defined %}
                        {{ form_row(form.category) }}
                    {% endif %}

                    {% if form.categories is defined %}
                        {{ form_row(form.categories) }}
                    {% endif %}

                    {{ form_row(form.excerpt) }}

                    {{ form_row(form.description) }}

                </div>

            </div>


        </div>

        <div class="tab-pane" id="panel-tab2">


            <div class="card">

                <div class="card-body">

                    {{ form_row(form.metaTitle) }}

                    {{ form_row(form.metaDescription) }}

                    {{ form_row(form.metaKeywords) }}

                </div>

            </div>

        </div>

    </div>


{% endblock %}

