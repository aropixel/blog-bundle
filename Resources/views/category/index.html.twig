{% extends '@AropixelAdmin/List/datatable.html.twig' %}


{% block meta_title %}{% trans %}Categories{% endtrans %} - {% trans %}Categories list{% endtrans %}{% endblock %}
{% block header_title %}{% trans %}Categories{% endtrans %} {% endblock %}
{% block header_breadcrumb %}
    <ul class="breadcrumb breadcrumb-caret position-right">
        <li class="breadcrumb-item"><a href="{{ url('_admin') }}">{% trans %}Home{% endtrans %}</a></li>
        <li class="breadcrumb-item">Blog</li>
        <li class="breadcrumb-item active">{% trans %}Categories{% endtrans %}</li>
    </ul>
{% endblock %}


{% block paneltitle %}{% trans %}Categories list{% endtrans %}{% endblock %}


{% block paneldatatable %}

    <table class="table card-table table-vcenter text-nowrap datatable">
        <thead>
        <tr>
            <th>Position</th>
            <th>{% trans %}Title{% endtrans %}</th>
            <th style="width:200px">Date</th>
            <th class="no-sort" style="width:150px">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.position +1 }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.createdAt|datetime('dd/MM/Y') }}</td>

                <td class="text-right">
                    <div class="btn-group">
                        <button type="button" class="badge badge-light badge-icon" data-bs-toggle="dropdown" data-boundary="viewport">
                            <i class="fas fa-ellipsis-h"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end" data-bs-popper="static">
                            <a href="{{ path('aropixel_blog_category_edit', {'id': category.id}) }}" class="dropdown-item has-icon"><i class="fas fa-edit"></i> {% trans %}Edit{% endtrans %}</a>
                            <div class="dropdown-divider"></div>
                            <a data-confirm="Êtes-vous certain de vouloir supprimer cette catégorie ?" class="delete dropdown-item has-icon text-danger">
                                <i class="fas fa-trash"></i> Supprimer
                            </a>
                            {{ form(delete_forms[category.id]) }}
                        </div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
