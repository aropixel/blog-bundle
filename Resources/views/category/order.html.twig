{% extends '@AropixelAdmin/List/order.html.twig' %}


{% block meta_title %}Catégories - Réorganiser les catégories{% endblock %}
{% block header_title %} <span class="text-semibold">Catégories</span> - Réorganiser les catégories{% endblock %}
{% block header_breadcrumb %}
    <ul class="breadcrumb breadcrumb-caret position-right">
        <li><a href="{{ url('_admin') }}">Accueil</a></li>
        <li>Blog</li>
        <li><a href="{{ url('post_category_index') }}">Catégories</a></li>
        <li class="active">Réorganiser les catégories</li>
    </ul>
{% endblock %}


{% block paneltitle %}Réorganiser les catégories{% endblock %}


{% block panelbody %}

    <table class="table sortable" data-path="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}">
        <thead>
        <tr>
            <th class="position">&nbsp;</th>
            <th>Titre</th>
            <th style="width:200px">Date</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr id="entity_{{ category.id }}">
                <td class="position"><i class="icon-move"></i></td>
                <td>{{ category.name }}</td>
                <td>{{ category.createdAt|datetime('dd/MM/Y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
